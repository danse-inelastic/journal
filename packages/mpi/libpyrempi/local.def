# C++


CXX = mpicxx

PROJ_CXX_INCLUDES += $(MPI_INCDIR)

    PROJ_CXX_FLAGS += $(CXX_SOFLAGS)
    PROJ_LCXX_FLAGS += $(LCXX_SARFLAGS) 
    PROJ_CXX_SRCLIB = -ljournal 

PROJ_LCXX_FLAGS += -L$(MPI_LIBDIR)

ifeq (mpich, ${findstring mpich, $(MPI_VERSION)})
    PROJ_LCXX_FLAGS += -lmpich
endif
ifeq (openmpi, ${findstring openmpi, $(MPI_VERSION)})
    PROJ_LCXX_FLAGS += -lmpi
endif

